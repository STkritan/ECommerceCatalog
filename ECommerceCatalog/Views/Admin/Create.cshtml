@model ECommerceCatalog.Models.Product

<h1>Add Product</h1>
<form asp-controller="Admin" asp-action="Create" method="post">
    <input asp-for="Name" placeholder="Name" />
    <input asp-for="Price" placeholder="Price" />
    <input asp-for="Description" placeholder="Description" />
    <input asp-for="ImageUrl" placeholder="Image URL" />
    <input asp-for="Category" placeholder="Category" />
    <button type="submit">Add</button>
</form>
